include mixins
html( lang="en" )
	head
		script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
		link( rel='stylesheet', href='/stylesheets/style.css' )
		title Drone Hunt
		meta( charset='utf-8' )
		meta( http-equiv='X-UA-Compatible', content='IE=edge' )
		meta( name='viewport', content='width=device-width, initial-scale=1.0' )
		meta( name='description', content='Drone Hunt Game Engine' )
		//- Bootswatch Theme
		link(href="/stylesheets/bootstrap.css", rel="stylesheet")

		body(style="padding-bottom:10rem;")
		.container: .row
				.panel.panel-primary
					.panel-heading
						center
							h3.panel-title End of Game
					.panel-body
						center
							h3#game_over(style='display:inline;') GAME OVER!

						br

						#scores
							table.table.table-striped.table-hober
								thead
									tr
										th
										th Score
										th Shots Fired
										th Accuracy
								tbody
									tr.danger
										td Player 1
										td#p1_score
										td#p1_shots_fired
										td#p1_accuracy
								tbody
									tr.success
										td Player 2
										td#p2_score
										td#p2_shots_fired
										td#p2_accuracy
						
						#winner_p1.alert.alert-dismissible.alert-danger(style='display:none;')
							center
								strong
									h1 PLAYER 1 WINS!
						#winner_p2.alert.alert-dismissible.alert-success(style='display:none;')
							center
								strong
									h1 PLAYER 2 WINS!
						#winner_draw.alert.alert-dismissible.alert-info(style='display:none;')
							center
								strong
									h1 DRAW!

						br
							
						#endgame
							.row
								.col-md-2.col-sm-2.col-md-offset-4.col-sm-offset-4
									span#button_newgame.btn.btn-primary(style='display:inline;') PLAY AGIAN
								.col-md-1.col-sm-1
									span#button_endgame.btn.btn-primary(style='display:inline;') END GAME
		script(src='/javascripts/endgame.js')